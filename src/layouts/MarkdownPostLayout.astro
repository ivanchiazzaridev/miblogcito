---
// Importamos Layout Base
import BaseLayout from '../layouts/BaseLayout.astro';

import '../styles/mdPostLayoutStyle.css';


const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
    <!-- <h1>{frontmatter.title}</h1> -->
    <p>Este Texto es mencionado "contenido principal" por mi screen reader </p>
    <p>Publicado el: {frontmatter.pubDate.toString().slice(0,10)}</p>
    <p>Escrito por {frontmatter.author}</p>
    <img class="astro-logo" src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />
    
    <div class="tags">
        {frontmatter.tags.map((tag) => (<p class="tag" ><a href={`/tags/${tag}`}>{tag}</a></p>
        ))}
    </div>
    <slot />

</BaseLayout>
