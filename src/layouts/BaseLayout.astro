---
// Importamos componentes reutilizables
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

// importamos estilos globales
import '../styles/global.css';

// Declaraci√≥n de Variables
const siteTitle = "Mi Blogcito";
const { pageTitle } = Astro.props;
---
<!-- Frontmatter END -->

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle} - {siteTitle}</title>
	</head>
	<!-- Body -->
	<body>		
    <div class="site-wrapper"><!-- Repeticion (Refact Layout) -->
        <Header /> <!-- Repeticion (Refact Layout) -->
        <h2 class="site-title" >{siteTitle}</h2>        
        <h1>{pageTitle}</h1><!-- Repeticion (Refact Layout) -->
        
        <slot />
        <Footer /> <!-- Repeticion (Refact Layout) -->
    </div>

		<!-- Script -->
		<script>
		import "../scripts/menu.js";			
		</script>
	</body>
</html>
